# OpenTelemetry Authorization
# Set this to enable OTLP authentication (optional)
OTEL_AUTHORIZATION=
VITE_OTEL_AUTHORIZATION=

# Worker Configuration
# Random wait time range for order processing (in seconds)
WORKER_MIN_WAIT=0.1
WORKER_MAX_WAIT=2.0

# Locust Load Generator Configuration
# These are used when starting the load generator with:
# docker compose --profile loadgen up locust

# Target host for load testing
LOCUST_HOST=http://api:8080

# Number of concurrent users to simulate
LOCUST_USERS=10

# Rate at which users are spawned (users per second)
LOCUST_SPAWN_RATE=2

# Run headless mode (true/false) - if true, automatically starts load test
LOCUST_HEADLESS=false

# Optional: Auto-stop after this duration (e.g., 5m, 1h)
# Leave empty for manual control via web UI
LOCUST_RUN_TIME=
